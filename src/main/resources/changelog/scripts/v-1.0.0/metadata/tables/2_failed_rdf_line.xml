<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="2_failed_rdf_line" author="Pavel Bobylev">
    <createSequence sequenceName="failed_rdf_line_seq"/>

    <createTable tableName="failed_rdf_line">
      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_failed_rdf_line"/>
      </column>
      <column name="job_instance_id" type="BIGINT"/>
      <column name="failed_rdf_line" type="TEXT"/>
      <column name="exception" type="TEXT"/>
    </createTable>

    <rollback>
      <dropTable tableName="failed_rdf_line"/>
      <dropSequence sequenceName="failed_rdf_line_seq"/>
    </rollback>
  </changeSet>

</databaseChangeLog>

