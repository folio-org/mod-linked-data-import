<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="2_failed_rdf_line_sequence" author="Pavel Bobylev">
    <preConditions onFail="MARK_RAN">
      <not>
        <sequenceExists sequenceName="failed_rdf_line_seq"/>
      </not>
    </preConditions>

    <createSequence sequenceName="failed_rdf_line_seq" startValue="1" incrementBy="1"/>

    <rollback>
      <dropTable tableName="failed_rdf_line"/>
      <dropSequence sequenceName="failed_rdf_line_seq"/>
    </rollback>
  </changeSet>

  <changeSet id="3_failed_rdf_line_table" author="Pavel Bobylev">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="failed_rdf_line"/>
      </not>
    </preConditions>

    <createTable tableName="failed_rdf_line">
      <column name="id" type="BIGINT" defaultValueSequenceNext="failed_rdf_line_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_failed_rdf_line"/>
      </column>
      <column name="job_instance_id" type="BIGINT"/>
      <column name="failed_rdf_line" type="TEXT"/>
      <column name="description" type="TEXT"/>
    </createTable>

    <rollback>
      <dropTable tableName="failed_rdf_line"/>
    </rollback>
  </changeSet>

</databaseChangeLog>

