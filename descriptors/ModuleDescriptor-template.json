{
  "id": "@artifactId@-@version@",
  "name": "Linked Data Import Module",
  "provides": [
    {
      "id": "_tenant",
      "version": "2.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/_/tenant",
          "modulePermissions": []
        },
        {
          "methods": [ "DELETE", "GET" ],
          "pathPattern": "/_/tenant/{id}"
        }
      ]
    },
    {
      "id": "linked-data-import",
      "version": "1.0",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/linked-data-import/start",
          "permissionsRequired": [ "linked-data-import.start" ],
          "modulePermissions": []
        },
        {
          "methods": [ "GET" ],
          "pathPattern": "/linked-data-import/jobs/{jobExecutionId}",
          "permissionsRequired": [ "linked-data-import.job.get" ],
          "modulePermissions": []
        },
        {
          "methods": [ "GET" ],
          "pathPattern": "/linked-data-import/jobs/{jobExecutionId}/failed-lines",
          "permissionsRequired": [ "linked-data-import.job.failed-lines.get" ],
          "modulePermissions": []
        },
        {
          "methods": [ "PUT" ],
          "pathPattern": "/linked-data-import/jobs/{jobExecutionId}/cancel",
          "permissionsRequired": [ "linked-data-import.job.cancel" ],
          "modulePermissions": []
        }
      ]
    }
  ],
  "requires": [
    {
      "id": "linked-data",
      "version": "2.0"
    }
  ],
  "permissionSets": [
    {
      "permissionName": "linked-data-import.start",
      "displayName": "Linked Data Import: Start Linked Data Import process",
      "description": "Start Linked Data Import process"
    },
    {
      "permissionName": "linked-data-import.job.get",
      "displayName": "Linked Data Import: Get import job information",
      "description": "Get import job information by job ID"
    },
    {
      "permissionName": "linked-data-import.job.failed-lines.get",
      "displayName": "Linked Data Import: Download failed RDF lines",
      "description": "Download CSV file with failed RDF lines for a job"
    },
    {
      "permissionName": "linked-data-import.job.cancel",
      "displayName": "Linked Data Import: Cancel running import job",
      "description": "Cancel a running import job by job execution ID"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 1073741824,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "SERVER_PORT", "value": "8081" },
      { "name": "ENV", "value": "folio" },
      { "name": "JAVA_OPTIONS", "value": "-XX:MaxRAMPercentage=85.0 -Xss4m" },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "KAFKA_HOST", "value": "kafka" },
      { "name": "KAFKA_PORT", "value": "9092" },
      { "name": "KAFKA_SECURITY_PROTOCOL", "value": "PLAINTEXT" },
      { "name": "KAFKA_SSL_KEYSTORE_LOCATION", "value": "" },
      { "name": "KAFKA_SSL_KEYSTORE_PASSWORD", "value": "" },
      { "name": "KAFKA_SSL_TRUSTSTORE_LOCATION", "value": "" },
      { "name": "KAFKA_SSL_TRUSTSTORE_PASSWORD", "value": "" },
      { "name": "KAFKA_CONSUMER_MAX_POLL_RECORDS", "value": "200" },
      { "name": "KAFKA_RETRY_INTERVAL_MS", "value": "2000" },
      { "name": "KAFKA_RETRY_DELIVERY_ATTEMPTS", "value": "6" },
      { "name": "KAFKA_IMPORT_RESULT_EVENT_CONCURRENCY", "value": "10" },
      { "name": "KAFKA_LINKED_DATA_IMPORT_OUTPUT_TOPIC", "value":  "linked_data_import.output" },
      { "name": "KAFKA_LINKED_DATA_IMPORT_OUTPUT_TOPIC_PARTITIONS", "value": "3" },
      { "name": "KAFKA_LINKED_DATA_IMPORT_RESULT_TOPIC", "value": "linked_data_import.result" },
      { "name": "KAFKA_LINKED_DATA_IMPORT_RESULT_TOPIC_PARTITIONS", "value": "3" },
      { "name": "S3_URL", "value": "" },
      { "name": "S3_REGION", "value": "" },
      { "name": "S3_BUCKET", "value": "" },
      { "name": "S3_ACCESS_KEY_ID", "value": "" },
      { "name": "S3_SECRET_ACCESS_KEY", "value": "" },
      { "name": "S3_IS_AWS", "value": "false" },
      { "name": "CHUNK_SIZE", "value": "1000" },
      { "name": "OUTPUT_CHUNK_SIZE", "value": "100" },
      { "name": "JOB_POOL_SIZE", "value": "1" },
      { "name": "PROCESS_FILE_MAX_POOL_SIZE", "value": "1000" },
      { "name": "WAIT_FOR_PROCESSING_INTERVAL_MS", "value": "5000" }
    ]
  }
}
